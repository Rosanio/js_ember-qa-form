<div class="col-xs-8">
  <form>
    <div class="form-group">
      <label for="content">Question:</label>
      {{input value=content id="content" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="notes">Additional Notes:</label>
      {{input value=notes id="notes" class="form-control"}}
    </div>
    <button {{action 'askQuestion'}} class="btn btn-primary">Go!</button>
  </form>
</div>
